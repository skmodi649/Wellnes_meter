<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="#CF9FFF"
    tools:context=".HealthIndexCalc">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Fill the details"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
            android:id="@+id/hicbmi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_bmi"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hicpulse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hciage"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/hicpulse"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_pulse_rate"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hicbp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hicbmi"
            tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/hicbp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_systolic_bp"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/teal_200"
        android:textColorHint="@color/teal_700"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hcibpa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hicpulse" />

        <EditText
            android:id="@+id/hicsugar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_blood_sugar_level"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hiccholesterol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hcibpa" />

        <EditText
            android:id="@+id/hiccholesterol"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_cholesterol_level"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hicsodium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hicsugar" />

        <EditText
            android:id="@+id/hicsodium"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_sodium_level"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColorHint="@color/teal_700"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hiccalcium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hiccholesterol" />

        <EditText
            android:id="@+id/hiccalcium"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="Enter Calcium Level"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textColorHint="@color/teal_700"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hicresp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hicsodium" />


        <EditText
            android:id="@+id/hicresp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:textColorHint="@color/teal_700"
            android:hint="@string/enter_respiratory_rate"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hiccalcium" />

        <EditText
            android:id="@+id/hciage"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center_horizontal"
            android:hint="@string/enter_the_age"
            android:textColorHint="@color/teal_700"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="@color/teal_200"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/hicbmi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/hcibpa"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="@string/enter_diastolic_bp"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="@color/teal_200"
        android:textColorHint="@color/teal_700"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hicsugar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hicbp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/score"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="#ADD8E6"
        android:fontFamily="@font/raleway"
        android:text="Calculate Score"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hicresp" />


</androidx.constraintlayout.widget.ConstraintLayout>